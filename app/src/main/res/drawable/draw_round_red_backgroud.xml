<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <gradient android:endColor="@color/end_shadow_color"
                      android:startColor="@color/start_shadow_color"/>
        </shape>
    </item>

    <item android:bottom="5px" android:left="5px" android:right="5px" android:top="5px">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
            <gradient android:gradientRadius="@dimen/radius_imagetext_container"
                      android:startColor="@color/cyan"/>
            <corners android:radius="@dimen/radius_imagetext_container"/>
            <solid android:color="@color/ashenred"/>
        </shape>
    </item>
</layer-list>