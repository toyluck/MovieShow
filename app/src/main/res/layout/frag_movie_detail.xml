<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="model" type="com.example.hyc.movieshow.datas.MovieModel"/>

    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RadioGroup android:id="@+id/rg_movie_detail"
                    android:layout_width="366dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="8dp"
                    android:orientation="horizontal" app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_constraintLeft_creator="1" tools:layout_constraintTop_creator="1">
            <RadioButton style="@style/radio_check"
                         android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight="1"
                         android:background="@drawable/select_left_rb"
                         android:text="@string/info"
                         android:checked="true"
                         android:id="@+id/rb_info"
            />
            <RadioButton style="@style/radio_check"
                         android:layout_width="0dp"
                         android:id="@+id/rb_relate"
                         android:layout_height="match_parent"
                         android:layout_weight="1"
                         android:background="@drawable/select_right_rb"
                         android:text="@string/related"/>
        </RadioGroup>
        <FrameLayout
            android:id="@+id/frame_movie_detail"
            android:layout_width="0dp"
            android:layout_height="447dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/rg_movie_detail"
            app:layout_constraintRight_toRightOf="@+id/rg_movie_detail"
            app:layout_constraintTop_toBottomOf="@+id/rg_movie_detail"/>

    </android.support.constraint.ConstraintLayout>

</layout>